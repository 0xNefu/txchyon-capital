    <div class="relative z-10 container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-16">
          <div class="flex items-center justify-center gap-3 mb-6">
            <div class="w-8 h-px bg-gray-400"></div>
