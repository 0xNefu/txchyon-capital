---
import Base from '../layouts/Base.astro';

// Check if already logged in (for redirect)
const isAuthenticated = typeof window !== 'undefined' ? localStorage.getItem('capital_dashboard_auth') === 'true' : false;

if (isAuthenticated && typeof window !== 'undefined') {
  window.location.href = '/dashboard';
}
---

<Base>
  <!-- HERO WITH BACKGROUND IMAGE - 90% VISIBLE! -->
  <section class="relative min-h-screen bg-black overflow-hidden">
    <!-- Hero Background Image - MAXIMUM VISIBILITY -->
    <div class="absolute inset-0">
      <!-- Your hero image at nearly full opacity -->
      <img 
        src="/images/hero1.png" 
        alt="Txchyon Capital Background" 
        class="w-full h-full object-cover"
        style="opacity: 0.9;"
        id="hero-image-main"
      />
      
      <!-- Barely-there overlay for minimal text contrast -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/5 via-transparent to-black/5"></div>
    </div>
    
    <!-- Content Container with minimal interference -->
    <div class="relative z-10 container mx-auto px-4 pt-32 pb-20">
      <div class="max-w-4xl mx-auto">
        <!-- Logo and Header - Almost no background -->
        <div class="flex justify-center mb-16">
          <div class="text-center">
            <div class="flex justify-center mb-8">
              <img 
                src="/images/logo.png" 
                alt="Txchyon Capital Logo" 
                class="h-20 w-auto object-contain drop-shadow-lg"
                onerror="this.style.display='none'; document.getElementById('hero-fallback-logo').style.display='block';"
              />
              <div id="hero-fallback-logo" class="hidden">
                <div class="text-5xl mb-4">‚ö´</div>
              </div>
            </div>
            
            <div class="inline-block mb-8">
              <span class="text-xs font-mono tracking-widest text-white uppercase border border-white/30 px-3 py-1 rounded-full">
                Established 2018
              </span>
            </div>
            
            <h1 class="text-4xl md:text-5xl font-light tracking-tight text-white mb-6 leading-tight drop-shadow-lg">
              Txchyon Capital
            </h1>
            <p class="text-xl text-white font-light max-w-2xl mx-auto mb-10 drop-shadow-lg">
              A long-term digital capital allocator and operating system.
            </p>
            
            <!-- Core Purpose Quote -->
            <div class="max-w-xl mx-auto mb-12">
              <div class="pl-6 py-2">
                <p class="text-lg text-white italic drop-shadow-lg">
                  "Turn productive digital systems into compounding capital."
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Minimal Stats - Almost transparent -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto mb-20">
          <div class="text-center bg-black/20 rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-light text-white mb-2 drop-shadow-lg">6+</div>
            <div class="text-sm text-white">Years Operating</div>
          </div>
          <div class="text-center bg-black/20 rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-light text-white mb-2 drop-shadow-lg">100%</div>
            <div class="text-sm text-white">Internal Capital</div>
          </div>
          <div class="text-center bg-black/20 rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-light text-white mb-2 drop-shadow-lg">0</div>
            <div class="text-sm text-white">External LPs</div>
          </div>
          <div class="text-center bg-black/20 rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-light text-white mb-2 drop-shadow-lg">‚àû</div>
            <div class="text-sm text-white">Time Horizon</div>
          </div>
        </div>
        
        <!-- Access Button - Minimal overlay -->
        <div class="text-center">
          <button onclick="window.location.href='/login'"
                  class="inline-flex items-center gap-2 px-8 py-3 bg-black/40 border border-white/40 text-white hover:bg-black/60 hover:border-white/60 rounded-lg transition-colors drop-shadow-lg">
            <span>Access System</span>
            <span>‚Üí</span>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10">
      <div class="animate-pulse">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- WHAT IT IS / WHAT IT IS NOT WITH HERO4.JPG -->
