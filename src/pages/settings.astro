---
import Layout from '../layouts/Base.astro';
import DashboardHeader from '../components/DashboardHeader.astro';
---

<Layout>
  <DashboardHeader 
    title="System Settings" 
    subtitle="Configure your dashboard and preferences"
  />
  
  <!-- Settings Sections -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column: Navigation -->
    <div class="lg:col-span-1">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Settings Menu</h3>
        <nav class="space-y-2">
          <a href="#general" class="block px-4 py-3 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 rounded-lg font-medium">
            âš™ï¸ General Settings
          </a>
          <a href="#security" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition">
            ğŸ”’ Security
          </a>
          <a href="#notifications" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition">
            ğŸ”” Notifications
          </a>
          <a href="#integrations" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition">
            ğŸ”— Integrations
          </a>
          <a href="#team" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition">
            ğŸ‘¥ Team Management
          </a>
          <a href="#billing" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition">
            ğŸ’³ Billing
          </a>
        </nav>
      </div>
    </div>
    
    <!-- Right Column: Settings Content -->
    <div class="lg:col-span-2">
      <!-- General Settings -->
      <div id="general" class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">âš™ï¸ General Settings</h3>
        
        <div class="space-y-6">
          <!-- Theme Settings -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Appearance</h4>
            <div class="grid grid-cols-2 gap-4">
              <button class="p-4 border-2 border-blue-500 rounded-lg text-center">
                <div class="text-2xl mb-2">ğŸŒ™</div>
                <div class="font-medium">Dark Mode</div>
                <div class="text-xs text-gray-500 mt-1">Currently active</div>
              </button>
              <button class="p-4 border border-gray-300 dark:border-gray-600 rounded-lg text-center hover:border-gray-400 dark:hover:border-gray-500 transition">
                <div class="text-2xl mb-2">â˜€ï¸</div>
                <div class="font-medium">Light Mode</div>
              </button>
            </div>
          </div>
          
          <!-- Date Format -->
          <div>
            <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Date Format</label>
            <select class="w-full px-4 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
              <option>MM/DD/YYYY (US)</option>
              <option>DD/MM/YYYY (EU)</option>
              <option>YYYY-MM-DD (ISO)</option>
            </select>
          </div>
          
          <!-- Time Zone -->
          <div>
            <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Time Zone</label>
            <select class="w-full px-4 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
              <option>UTC-05:00 Eastern Time (US & Canada)</option>
              <option>UTC-08:00 Pacific Time (US & Canada)</option>
              <option>UTC+00:00 London</option>
              <option>UTC+01:00 Berlin</option>
            </select>
          </div>
          
          <!-- Save Button -->
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <button class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200">
              Save General Settings
            </button>
          </div>
        </div>
      </div>
      
      <!-- Security Settings -->
      <div id="security" class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">ğŸ”’ Security Settings</h3>
        
        <div class="space-y-6">
          <!-- Password Change -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Change Password</h4>
            <div class="space-y-4">
              <input type="password" placeholder="Current Password" class="w-full px-4 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
              <input type="password" placeholder="New Password" class="w-full px-4 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
              <input type="password" placeholder="Confirm New Password" class="w-full px-4 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
            </div>
          </div>
          
          <!-- Two-Factor Auth -->
          <div>
            <div class="flex items-center justify-between">
              <div>
                <h4 class="text-sm font-medium text-gray-900 dark:text-white">Two-Factor Authentication</h4>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Add an extra layer of security</p>
              </div>
              <button class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition">
                Enable
              </button>
            </div>
          </div>
          
          <!-- Session Management -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Active Sessions</h4>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div>
                  <div class="font-medium text-gray-900 dark:text-white">Current Session</div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Windows â€¢ Chrome â€¢ Just now</div>
                </div>
                <button class="text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">
                  Revoke
                </button>
              </div>
            </div>
          </div>
          
          <!-- Save Button -->
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <button class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200">
              Update Security Settings
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>